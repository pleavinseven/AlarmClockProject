<resources>
    <!-- Base application theme. -->
    <style name="Theme.AlarmClockProject" parent="Theme.MaterialComponents.DayNight">

        <item name="android:windowLightStatusBar">false</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/salmon</item>
        <item name="colorPrimaryVariant">@color/blue_sky</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_sky</item>
        <item name="colorSecondaryVariant">@color/dark_mode_white</item>
        <item name="colorOnSecondary">@color/dark_mode_white</item>
        <item name="android:textColor">@color/dark_mode_white</item>
        <item name="android:editTextColor">@color/dark_mode_white</item>
        <item name="strokeColor">@color/dark_mode_white</item>
        <item name="android:statusBarColor">@color/status_bar_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Other values-->
        <item name="alarmBgColour">@color/black</item>
        <item name="fab_background">@color/fab_background_dark</item>
        <item name="fab_background_off">@color/background_dark</item>
    </style>
</resources>
