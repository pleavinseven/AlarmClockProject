<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarm_shake_ring_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmRingActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/alarm_bubble"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading-bubble.json"
        app:lottie_loop="true"
        app:lottie_speed="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_snooze_alarm" />


    <Button
        android:id="@+id/btn_snooze_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="@string/snooze_alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cancel_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/cancel_alarm"
        app:layout_constraintBottom_toTopOf="@+id/btn_snooze_alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/current_time"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:text="this"
        app:layout_constraintBottom_toBottomOf="@+id/alarm_bubble"
        app:layout_constraintEnd_toEndOf="@+id/alarm_bubble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alarm_bubble" />

</androidx.constraintlayout.widget.ConstraintLayout>